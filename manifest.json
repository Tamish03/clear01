{
  "manifest_version": 3,
  "name": "CLEAR: AI Safety Shield",
  "version": "1.0",
  "description": "Detects and blurs unsafe web content using AI.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "css": ["styles/overlay.css"]
    }
  ]
}